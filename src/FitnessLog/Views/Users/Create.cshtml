@{
    ViewData["Title"] = "Account Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FitnessLog.ViewModels.RegisterViewModel
<h2>Create a New Account</h2>
@using (Html.BeginForm("Create", "Users", FormMethod.Post))
{
    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email)
    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)
    @Html.LabelFor(m => m.ConfirmPassword)
    @Html.PasswordFor(m => m.ConfirmPassword)
    @Html.LabelFor(model => model.Age)
    @Html.TextBoxFor(model => model.Age, new { type = "number", min = "0", max = "99" })
    @Html.LabelFor(model => model.Height)
    @Html.TextBoxFor(model => model.Height, new { type = "number", min = "0", max = "99" })
    @Html.LabelFor(model => model.Weight)
    @Html.TextBoxFor(model => model.Weight, new { type = "number", min="0", max="999" })
    @Html.LabelFor(model => model.Gender)
    @Html.Label("Gender", ":  Male")
    @Html.RadioButton("Gender", 0)
    @Html.Label("Gender", "Female")
    @Html.RadioButton("Gender", 1)
    @Html.Label("Gender", "Non-Binary")
    @Html.RadioButton("Gender", 2)
    @Html.Label("Gender", "Prefer Not To Answer")
    @Html.RadioButton("Gender", 3)
    <input type="submit" value="Register" />
}
<p>@Html.ActionLink("Back to location", "Index")</p>
