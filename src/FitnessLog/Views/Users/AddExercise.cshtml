@{
    ViewData["Title"] = "Add Exercises";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Exercises</h2>
<ul class="exercises"></ul>
<h2>Add Exercise</h2>
<form action="AddExercise" class="add-exercise">
    <input type="hidden" name="entryId" value=@ViewBag.EntryId />
    <select name="exerciseId">
        @foreach (var exercise in ViewBag.Exercises)
        {
            <option value=@exercise.ExerciseId>@exercise.Name</option>
        }
    </select>
    <p>Sets</p>
    <input type="number" name="sets">
    <p>Reps</p>
    <input type="number" name="reps">
    <p>Weight</p>
    <input type="number" name="weight">
    <button type="submit">Add Exercise</button>
</form>
<p><a href="/Users/">Back to Logs</a></p>